<h2>Sign up</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: 'form-horizontal'}) do |f| %>
    <%= f.error_notification %>

    <!-- Username Input-->
    <div class="control-group">
      <label class="control-label">Username</label>
      <div class="controls">
        <%= f.input :name, :autofocus => true, label: false %>
        <%= f.hint 'No Spaces, all downcase please' %>
      </div>
    </div>

    <!-- First Name Input-->
    <div class="control-group">
      <label class="control-label">First Name</label>
      <div class="controls">
        <%= f.input :first_name, :autofocus => true, label: false %>
      </div>
    </div>

    <!-- Last Name Input-->
    <div class="control-group">
      <label class="control-label">Last Name</label>
      <div class="controls">
        <%= f.input :last_name, :autofocus => true, label: false %>
      </div>
    </div>

   <!-- Email Input-->
    <div class="control-group">
      <label class="control-label">Email</label>
      <div class="controls">
        <%= f.input :email, :autofocus => true, label: false %>
      </div>
    </div>

    <!-- Password Input -->
    <div class="control-group">
      <label class="control-label">Password</label>
      <div class="controls">
        <%= f.input :password, :autofocus => true, label: false %>
      </div>
    </div>

    <!-- Password Confirmation Input -->
    <div class="control-group">
      <label class="control-label">Password Confirmation</label>
      <div class="controls">
        <%= f.input :password_confirmation, :autofocus => true, label: false %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit "Sign up", class: "btn btn-primary" %>
    </div>
<% end %>

<%= render "devise/shared/links" %>