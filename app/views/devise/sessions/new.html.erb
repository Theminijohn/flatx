<h2>Sign in</h2>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: 'form-horizontal'}) do |f| %>

    <!-- Email Input-->
    <div class="control-group">
      <label class="control-label">Email</label>
      <div class="controls input-prepend">
        <%= f.input :email, :autofocus => true, label: false do %>
            <span class="add-on">@</span><%= f.input_field :email %>
        <% end %>
      </div>
    </div>


    <!-- Password Input-->
    <div class="control-group">
      <label class="control-label">Password</label>
      <div class="controls input-prepend">
        <%= f.input :password, :autofocus => true, label: false do %>
            <span class="add-on"><i class="icon-key"></i></span><%= f.input_field :password %>
        <% end %>
      </div>
    </div>

    <!-- Remember me Checkbox-->
    <div class="control-group">
      <label class="control-label">Remember me</label>
      <div class="controls">
        <%= f.input :remember_me, label: false, :as => :boolean if devise_mapping.rememberable? %>
      </div>
    </div>


    <div class="form-actions">
      <%= f.submit "Sign in", class: "btn btn-primary" %> or
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-small" %><br />
      <% end -%>
    </div>
<% end %>

